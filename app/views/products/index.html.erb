<section class="card text-center">
  <div class="card-header">
    Products
  </div>
  <div class="card-body">
    <h3 class="card-title">Trade your Treasures</h3>
    <p class="card-text">Browse our carefully curated collections</p>
  </div>
</section>


<section class="card-columns">
<% @products.each do |product| %>
  <div class="card">
      <%= link_to image_tag(product.photo_url, alt: "Picture of #{product.name}"), product_path(product.id), class: "img" %>
    <div class="card-body text-center">
    <h5 class="card-text"><%= product.name %></h5>
      <p class="card-text"><%= product.description %></p>
      <p class="card-text"> Cost: <%= product.price %> eggshells</p>
    </div>
  </div>
<% end %>
</section>


